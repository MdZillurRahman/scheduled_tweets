<div class="d-flex justify-content-between align-items-center">
  <h1>
    Tweets
  </h1>

  <% if Current.user.twitter_accounts.any? %>
    <%= link_to "Scheduled a Tweet", new_tweet_path, class: "btn btn-primary" %>
  <% end %>
</div>

  <% if Current.user.twitter_accounts.none? %>
    <%= button_to "Connect Twitter", "/auth/twitter", method: :post, class: "btn btn-primary mx-auto" %>
  <% end %>

<% @tweets.each do |tweet| %>
  <div class="d-flex align-items-center mb-4">
    <div class="me-4">
      <%= tweet.body %>
    </div>

    <%= button_to "Disconnect", tweet, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-primary" %>
  </div>
<% end %>