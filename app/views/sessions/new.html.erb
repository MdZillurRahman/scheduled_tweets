<div class="d-flex flex-column justify-content-center my-5">
  <h1 class="mx-auto">Sign In</h1>

  <%= form_with class: "d-flex flex-column align-items-center", url: sign_in_path do |form| %>
    <div class="mb-3">
      <%= form.label :email, class: "form-label d-block" %>
      <%= form.text_field :email, placeholder: "john@example.com" %>
    </div>
    <div class="mb-3">
      <%= form.label :password, class: "form-label d-block" %>
      <%= form.password_field :password, placeholder: "password" %>
      <%= link_to "Forget your password?", password_reset_path, class: "d-block my-2 text-end" %>
    </div>
    <div class="mb-3">
    <%= form.submit "Sign In", class: "btn btn-primary"%>
    </div>
  <% end %>
  <p class="mx-auto my-2">Don't have an account? <%= link_to "Sign Up", sign_up_path %></p>
</div>