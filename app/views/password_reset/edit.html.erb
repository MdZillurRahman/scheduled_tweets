<div class="d-flex flex-column justify-content-center my-5">
  <h1 class="mx-auto">Reset Your Password</h1>

  <%= form_with model: @user, class: "d-flex flex-column align-items-center", url: password_reset_edit_path(token: params[:token]) do |form| %>
    <% if form.object.errors.any? %>
      <div class="alert alert-danger">
        <% form.object.errors.full_messages.each do |message| %>
          <div>
            <%= message %>
          </div>
        <% end %>
      </div>
    <% end %>
    <div class="mb-3">
      <%= form.label :password, class: "form-label d-block" %>
      <%= form.password_field :password, placeholder: "password" %>
    </div>
    <div class="mb-3">
      <%= form.label :password_confirmation, class: "form-label d-block" %>
      <%= form.password_field :password_confirmation, placeholder: "confirm password" %>
    </div>
    <div class="mb-3">
      <%= form.submit "Reset Password", class: "btn btn-primary"%>
    </div>
  <% end %>
</div>