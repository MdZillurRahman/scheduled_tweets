<div class="d-flex flex-column justify-content-center my-5">
  <h1 class="mx-auto">Sign Up</h1>

  <%= form_with model: @user, class: "d-flex flex-column align-items-center", url: sign_up_path do |form| %>
    <% if @user.errors.any? %>
      <div class="alert alert-danger">
        <% @user.errors.full_messages.each do |message| %>
          <div>
            <%= message %>
          </div>
        <% end %>
      </div>
    <% end %>
    <div class="mb-3">
      <%= form.label :email, class: "form-label d-block" %>
      <%= form.text_field :email, placeholder: "john@example.com" %>
    </div>
    <div class="mb-3">
      <%= form.label :password, class: "form-label d-block" %>
      <%= form.password_field :password, placeholder: "password" %>
    </div>
    <div class="mb-3">
      <%= form.label :password_confirmation, class: "form-label d-block" %>
      <%= form.password_field :password_confirmation, placeholder: "confirm password" %>
    </div>
    <div class="mb-3">
    <%= form.submit "Sign Up", class: "btn btn-primary"%>
    </div>
  <% end %>
</div>